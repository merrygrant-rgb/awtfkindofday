---
layout: layouts/base.njk
---

<section class="post-page">
  <header class="post-header">
    <div class="post-header-inner">
      <span class="post-category">{{ category }}</span>
      <h1 class="post-title">{{ title }}</h1>
      <p class="post-teaser">{{ teaser }}</p>
      <div class="post-meta-row">
        <span class="post-date">{{ date | readableDate }}</span>
        <span class="post-dot">·</span>
        <span class="post-read-time">{{ read_time or '5' }} min read</span>
        {% if tags %}
          <span class="post-dot">·</span>
          <span class="post-tags">{{ tags | join(", ") }}</span>
        {% endif %}
        {% if validation_count %}
          <span class="post-dot">·</span>
          <span class="post-validation">{{ validation_count }} people validated this</span>
        {% endif %}
      </div>
    </div>
  </header>

  <article class="post-content">
    <div class="post-content-inner">
      {{ content | safe }}
    </div>
  </article>

  {% if related_merch %}
  <aside class="post-merch">
    <div class="post-merch-inner">
      <p class="post-merch-label">This sentiment also available on merchandise</p>
      <a href="{{ related_merch }}" class="post-merch-link">View in Shop →</a>
    </div>
  </aside>
  {% endif %}

  <section class="post-related">
    <div class="post-related-inner">
      <h2 class="post-related-title">More WTFs</h2>
      <div class="post-related-grid">
        {% set relatedPosts = collections.posts | where("data.category", category) | limit(3) %}
        {% for post in relatedPosts %}
          {% if post.url != page.url %}
            <a href="{{ post.url }}" class="post-related-card">
              <span class="post-related-cat">{{ post.data.category }}</span>
              <h3 class="post-related-item-title">{{ post.data.title }}</h3>
              <span class="post-related-meta">{{ post.date | readableDate }} · {{ post.data.read_time or '5' }} min</span>
            </a>
          {% endif %}
        {% endfor %}
      </div>
      <a href="/" class="post-back-link">Back to All Posts →</a>
    </div>
  </section>
</section>

<style>
.post-page {
  padding-top: 68px;
  min-height: 100vh;
}

.post-header {
  border-bottom: 1.5px solid var(--black);
  background: var(--gray-100);
  padding: 5% 8% 4%;
}

.post-header-inner {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.post-category {
  display: inline-block;
  font-size: 0.6rem;
  font-weight: 700;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: var(--accent);
  margin-bottom: 1.5rem;
}

.post-title {
  font-family: var(--font-display);
  font-size: clamp(2rem, 5vw, 4rem);
  font-weight: 900;
  line-height: 1.1;
  letter-spacing: -0.02em;
  margin-bottom: 1.5rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.post-teaser {
  font-size: 1.1rem;
  color: var(--gray-600);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto 2rem;
}

.post-meta-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  flex-wrap: wrap;
  font-size: 0.75rem;
  color: var(--gray-400);
  font-weight: 600;
  letter-spacing: 0.05em;
}

.post-dot {
  color: var(--gray-400);
}

.post-tags,
.post-validation {
  color: var(--gray-600);
}

.post-content {
  padding: 4% 8%;
}

.post-content-inner {
  max-width: 720px;
  margin: 0 auto;
  font-size: 1.05rem;
  line-height: 1.8;
  color: var(--black);
}

.post-content-inner p {
  margin-bottom: 1.5rem;
}

.post-content-inner h2 {
  font-family: var(--font-display);
  font-size: 1.8rem;
  font-weight: 700;
  margin-top: 3rem;
  margin-bottom: 1rem;
}

.post-content-inner h3 {
  font-family: var(--font-display);
  font-size: 1.4rem;
  font-weight: 700;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.post-content-inner ul,
.post-content-inner ol {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.post-content-inner li {
  margin-bottom: 0.5rem;
}

.post-content-inner blockquote {
  border-left: 3px solid var(--accent);
  padding-left: 1.5rem;
  margin: 2rem 0;
  font-family: var(--font-display);
  font-size: 1.3rem;
  font-style: italic;
  color: var(--gray-600);
}

.post-merch {
  border-top: 1.5px solid var(--black);
  border-bottom: 1.5px solid var(--black);
  background: var(--accent-light);
  padding: 2rem 8%;
}

.post-merch-inner {
  max-width: 900px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
}

.post-merch-label {
  font-size: 0.9rem;
  color: var(--gray-600);
  margin: 0;
}

.post-merch-link {
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--black);
  text-decoration: none;
  border-bottom: 1.5px solid var(--black);
  padding-bottom: 2px;
}

.post-related {
  padding: 5% 8%;
}

.post-related-inner {
  max-width: 1200px;
  margin: 0 auto;
}

.post-related-title {
  font-family: var(--font-display);
  font-size: 2rem;
  font-weight: 900;
  margin-bottom: 2rem;
}

.post-related-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0;
  border: 1.5px solid var(--black);
  margin-bottom: 3rem;
}

.post-related-card {
  border-right: 1.5px solid var(--black);
  padding: 2rem;
  text-decoration: none;
  color: var(--black);
  transition: background 0.2s;
}

.post-related-card:hover {
  background: var(--gray-100);
}

.post-related-card:last-child {
  border-right: none;
}

.post-related-cat {
  display: block;
  font-size: 0.6rem;
  font-weight: 700;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--gray-400);
  margin-bottom: 1rem;
}

.post-related-item-title {
  font-family: var(--font-display);
  font-size: 1.2rem;
  font-weight: 700;
  line-height: 1.25;
  margin-bottom: 1rem;
}

.post-related-meta {
  font-size: 0.7rem;
  color: var(--gray-400);
  font-weight: 600;
}

.post-back-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--black);
  text-decoration: none;
  border: 1.5px solid var(--black);
  padding: 1rem 2rem;
  transition: all 0.2s;
}

.post-back-link:hover {
  background: var(--black);
  color: var(--white);
}

@media (max-width: 768px) {
  .post-related-grid {
    grid-template-columns: 1fr;
  }
  .post-related-card {
    border-right: none;
    border-bottom: 1.5px solid var(--black);
  }
  .post-related-card:last-child {
    border-bottom: none;
  }
  .post-merch-inner {
    flex-direction: column;
    text-align: center;
  }
}
</style>
